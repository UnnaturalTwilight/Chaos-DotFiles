;; TESTING COPY OF BAR

;; Widgets
(defwidget bar []
  (box :orientation "h" :space-evenly false :spacing 10
    (box :class "debug" :orientation "h" :spacing 10 :visible {debug}
      (button :onclick "${EWW_CMD} o activate-linux --duration 90s" "󰡃")
      (tooltip (label :class "tooltip" :text {"Kill: ${EWW_CMD}"})
        (button :onclick "${EWW_CMD} kill" "󰅜")))
    (status)
    (padding :space 20 :expand true)
    (music)
    (padding :space 20)
    (sidestuff)
  ))

(defwidget sidestuff []
  (box :class "sidestuff" :orientation "h" :space-evenly false :spacing 5 :halign "end"
    ; (metric :label "󰃟"
    ;   :value {round((bright / 96000) * 100, 0)}
    ; :onchange "brightnessctl s {}% -n9600")
    (_volume :mute " "
      :low " " :high " "
      :value {round(volume[0] * 100, 0)}
      :muted {volume[1]}
    :onchange "scripts/setvol {}")
    (_battery :status {EWW_BATTERY.BAT1.status}
    :value {EWW_BATTERY.BAT1.capacity})
    (alertmode)
    (button :onclick "launch-start" (label :text {formattime(EWW_TIME, "%l:%M %b %d, %Y")}))))

(defwidget workspaces []
  (eventbox :onscroll "bash ~/.config/eww/scripts/change-active-workspace {} ${current_workspace}" :class "workspaces-widget"
    (box :space-evenly false
      :spacing 7
      (for workspace in workspaces
        (tooltip (label :text "${workspace.id}" :class "tooltip" )
          (eventbox :onclick "hyprctl dispatch workspace ${workspace.id}" 
            :class "workspace-entry ${workspace.windows > 0 ? "occupied" : "empty"}"
            (box 
              (label :text "" 
                :class "workspace-entry ${workspace.id == current_workspace ? "current" : ""}" )
            ))))
      (tooltip (label :text "Magic" :class "tooltip" )
        (button 
        :class "special-entry ${special_active ? "current" : ""} ${special_workspace > 0 ? "occupied" : "empty"}"
        :onclick "hyprctl dispatch togglespecialworkspace magic -q" "${special_active ? "󱊆" : "󱊇"}"
        ))
    )))

(defwidget status []
  (box :class "status"
    :orientation "h"
    :halign "fill"
    :space-evenly false
    :spacing 20
    (workspaces)
    ; (systray :orientation "h" :icon-size 16 :spacing 5)
    (label :text {window[1]} :visible {window[1] != ""} :truncate true)
  ))

(defwidget music []
  (box :class "music"
    :orientation "h"
    :space-evenly false
    :spacing 10
    :halign "end"
    :visible {music != ""}
    (button :onclick "playerctl previous" "󰑟" )
    (button :onclick "playerctl play-pause" "${playing == 'Playing' ? '󰏤' : '󰐊'}")
    (button :onclick "playerctl play-pause" "${music}")
    (button :onclick "playerctl next" "󰈑")
  ))

(defwidget metric [label value ?onchange]
  (tooltip (label :text {"${value}%"} :class "tooltip" )
    (box :orientation "h"
      :class "metric"
      :space-evenly false
      :spacing 1
      (label :text label)
      (slider :value value
        :active {onchange != ""}
      :onchange onchange))))

(defwidget _battery [status value]
  (tooltip (label :text "${value}%" :class "tooltip" )
    (box :class "metric"
      :space-evenly false
      :spacing -3
      (label :text {status == 'Charging' ? batt_icons[11] :
        value < 5 ? batt_icons[10] :
        value < 15 ? batt_icons[9] :
        value < 25 ? batt_icons[8] :
        value < 35 ? batt_icons[7] :
        value < 45 ? batt_icons[6] :
        value < 55 ? batt_icons[5] :
        value < 65 ? batt_icons[4] :
        value < 75 ? batt_icons[3] :
        value < 85 ? batt_icons[2] :
        value < 95 ? batt_icons[1] :
      batt_icons[0]})
      (slider :value value))))

(defwidget _volume [value mute muted low high onchange]
  (tooltip (label :text { speaker_raw == "bluez_output.40_72_18_AD_77_86.1" ? "󰋋  ${value}" : "󰓃  ${value}"} :class "tooltip" )
    (box :class "metric"
      :space-evenly false
      :spacing -7
      (button :onclick "wpctl set-mute @DEFAULT_SINK@ toggle"
        :onrightclick { speaker_raw == "bluez_output.40_72_18_AD_77_86.1" ? "pactl set-default-sink alsa_output.pci-0000_00_1f.3.analog-stereo && hyprctl notify 1 2000 1 \"Switched to internal speakers\""
        : "pactl set-default-sink bluez_output.40_72_18_AD_77_86.1 && hyprctl notify 1 2000 1 \"Switched to bluetooth headphones\""}
      {muted == true ? mute : value < 40 ? low : high})
      (slider
        :active {onchange != ""}
        :value value
        :class {volume[1] == true ? "dull" : "metric"}
      :onchange onchange))))

(defwidget alertmode []
  (box :class "toggle"
    :orientation "h"
    :space-evenly false
    :spacing 1
    (button :onclick "dunstctl set-paused toggle; ${EWW_CMD} poll dnd" { dnd == "false" ? " " : " "})
  ))

;; Window
(defwindow bar
  :monitor 0
  :exclusive true
  :geometry (geometry :x "0%"
    :y "5px"
    :width "92%"
    :height "10px"
  :anchor "top center")
  :focusable false
  (bar))
